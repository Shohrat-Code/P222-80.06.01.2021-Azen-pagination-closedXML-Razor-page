@model Blog
<div class="site page-content">
    <div class="breadcrumb-contact-us breadcrumb-section section-box">
        <div class="container breadcrumb-inner">
            <div class="breadcrumbs-wrapper">
                <ul class="phys-breadcrumb">
                    <li><a href="index.html" class="home">Home</a></li>
                    <li><a href="nosidebar.html" class="home">Blog</a></li>
                    <li>Blog Single</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content-area">
        <div class="container">
            <div class="row">
                <div class="site-main col-sm-9 alignleft">
                    <div class="wrapper-blog-content single-blog-content">
                        <article class="post">
                            <div class="post-formats-wrapper">
                                <img src="~/images/blog/@Model.MainImage"
                                     class="attachment-full size-full wp-post-image" alt="">
                            </div>
                            <div class="calendar">
                                <span class="date">@Model.CreatedDate.ToString("dd - MMMM - yyyy") /</span>
                                <span class="number-comment">
                                    <a href="leftsidebar.html">@Model.BlogCategory.Name /</a>
                                </span>
                                <span class="byline">
                                    <a class="url fn n" href="#">BY @Model.CustomUser.Name</a>
                                </span>
                            </div>
                            <h1 class="entry-title">@Model.Title</h1>
                            <div class="content-inner">
                                <p>@Html.Raw(Model.Content)</p>
                            </div>
                            <div class="final-blog">
                                <div class="tags-share-post">
                                    <div class="tags">
                                        <span>Tags :</span>
                                        @foreach (var item in Model.TagToBlogs)
                                        {
                                            <a asp-controller="blog" asp-action="index" asp-route-tagId="@item.TagId" rel="tag">@item.Tag.Name</a>
                                        }
                                    </div>
                                </div>
                                <div class="product-share">
                                    <span>Share: </span>
                                    <div class="item-social">
                                        <a class="face" title="Share on Facebook"
                                           href="http://www.facebook.com/sharer.php?u=">
                                            <i class="zmdi zmdi-facebook"></i>
                                        </a>
                                        <a class="twitter" title="Tweet this!"
                                           href="https://twitter.com/intent/tweet?text=">
                                            <i class="zmdi zmdi-twitter"></i>
                                        </a>
                                        <a class="google"
                                           href="https://plus.google.com/share?url=">
                                            <i class="zmdi zmdi-google"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <div id="comments" class="comments-area">
                            <h3 class="comments-title">Comments (3) </h3>
                            <div class="comment-list-inner">
                                <ol class="comment-list">
                                    <li class="comment even thread-even depth-1" id="comment-10">
                                        <div class="wrapper-comment">
                                            <div class="wrapper_avatar">
                                                <img alt="" src="images/outeam/avatar.png" class="avatar">
                                            </div>
                                            <div class="comment-right">
                                                <div class="comment-extra-info">
                                                    <div class="info-left">
                                                        <div class="author">Laura</div>
                                                        <div class="date">
                                                            23 - October - 2019
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="content-comment">
                                                    <p>
                                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
