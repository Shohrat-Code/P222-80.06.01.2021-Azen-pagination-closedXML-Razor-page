@model SizeToProduct
@{
    ViewData["Title"] = "Size";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <ul class="list-group">
                <li class="list-group-item">
                    <h1>Product - @Model.Product.Name</h1>
                </li>
                <li class="list-group-item">
                    <h3>Size - @Model.Size.Name</h3>
                </li>

                <li class="list-group-item">
                    <p>Price - @Model.Price</p>
                </li>

                <li class="list-group-item">
                    <p>Quantity by color:</p>
                    <div>
                        @foreach (var item in Model.ColorToSizeToProducts)
                        {
                            <p>@item.Color.Name - @item.Quantity</p>
                        }
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
