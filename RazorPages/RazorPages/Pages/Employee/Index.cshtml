@page
@model RazorPages.Pages.Employee.IndexModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a asp-page="/Employee/Create" class="btn btn-primary">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Age</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var item in Model.employees)
                    {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Age</td>
                        <td>
                            <a asp-page="/Employee/Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            <a asp-page="/Employee/Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>

                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>