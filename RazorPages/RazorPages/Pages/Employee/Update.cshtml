
@page
@model RazorPages.Pages.Employee.UpdateModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">

            <form method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Employee.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Employee.Name">
                    <span asp-validation-for="@Model.Employee.Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Employee.Surname" class="form-label">Surname</label>
                    <input class="form-control" asp-for="@Model.Employee.Surname">
                    <span asp-validation-for="@Model.Employee.Surname"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Employee.Age" class="form-label">Age</label>
                    <input class="form-control" asp-for="@Model.Employee.Age">
                    <span asp-validation-for="@Model.Employee.Age"></span>
                </div>

                <input hidden asp-for="@Model.Employee.Id"/>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </div>
    </div>
</div>